<% include ../partials/header %>

<div class = "" style="margin-left:50px;margin-right:50px">
    <div class="col s12">
        <br /><br />
        
        <!--- Add logic for only showing up if an admin user-->
        <a href="/dvd/add" class="btn btn-success btn-lg">Add a new DVD</a>
        
    </div>
</div>
<br>

<div class="" style="margin-left:50px;margin-right:50px">
    <div class="col s12">
        <% if (items.length > 0) { %>
        <table class="table">
            <thead>
                <tr>
                    <!--<th style = "width:1%;text-align:center">ID</th>-->
                    <th style="width:15%;">Title</th>
                    <th style="width:10%;">Release Date</th>
                    <th style="width:8%;text-align:center;">Cover Art</th>
                    <th style="width:40%;">Description</th>
                    <th style="width:10%;text-align:center;">Rating</th>
                    <th style="width:5%;">Quantity</th>
                    
                    <!--- Add logic for only showing up if an admin user-->
                    <th solspan="2" style="width:30%;text-align:center">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(function(item, index){ %>
                    <tr>
                        <!--<td style="width:1%;text-align:center"><%= index + 1 %></td>-->
                        <td style="width:15%;"><%= item.title %></td>
                        <td style="width:10%;"><%= item.release_date.toISOString().substring(0, 10) %></td>
                        <td style="width:8%;"><img src="<%= item.image_url %>"
                            alt="<%= item.title %>" width=125px; height=175px;/></td>
                        <td style="width:40%;"><%= item.description %></td>
                        <td style="width:10%;text-align:center;"><%= item.rating %></td>
                        <td style="width:5%;text-align:center;"> <%= item.quantity %></td>
                        
                        <!--- Add logic for only showing up if an admin user-->
                        <td solspan="2" style="width:30%;text-align:center">
                            <br><br>
                            <a href="/dvd/edit/<%= item.ID %>" class = "btn btn-success">Edit</a>
                            <br><br>
                            <a href="/dvd/delete/<%= item.ID %>" class ="btn btn-danger">Delete</a>
                        </td>
                        
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else{ %>
            <p><strong>There are no records available</strong></p>
        <% } %>
    </div>
</div>
