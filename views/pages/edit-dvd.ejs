<% include ../partials/header %>
<br>

<div class="row" style="margin-left:50px;margin-right:50px">
    <form action="http://localhost:3000/dvd/edit/<%= item[0].ID %>" method="post"class = "col s12">
        <input type="hidden" name="ID" value="<%= item[0].ID %>">
        <div class="form-group row">
            <label for="title" class="col-2 col-form-label">Title</label>
            <div class="col-10">
                <input type="text" name="title" value="<%= item[0].title %>"class = "form-control">
            </div>
        </div>
        <div class="form-group row">
            <label for="description" class="col-2 col-form-label">Description</label>
            <div class="col-10">
                <input type="text" name="description" value="<%= item[0].description %>"class = "form-control">
            </div>
        </div>
        <div class="form-group row">
            <label for="image_url" class="col-2 col-form-label">Image URL</label>
            <div class="col-10">
                <input type="text" name="image_url" value="<%= item[0].image_url %>"class = "form-control">
            </div>
        </div>
        <div class="form-group row">
            <label for="quantity" class="col-2 col-form-label">Quantity</label>
            <div class="col-10">
                <input type="text" name="quantity" value="<%= item[0].quantity %>"class = "form-control">
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-2 col-form-label" style="color:#ffffff">Click here to submit</label>
            <div class="col-10">
                <input type="submit" name="submit" value="Save DVD" class="btn btn-primary btn-lg">
            </div>
        </div>
    </form>
</div>

<% include ../partials/footer %>